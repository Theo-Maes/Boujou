{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "next-auth": ["./types/next-auth.d.ts"]
    },
    "types": [
      "node",
      "cypress",
      "@testing-library/cypress",
      "./cypress/support/commands",
      "cypress-file-upload"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/next-auth.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
